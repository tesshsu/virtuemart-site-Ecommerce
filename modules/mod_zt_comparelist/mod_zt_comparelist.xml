<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
    <name>Zt Comparelist</name>
    <creationDate>May 25, 2016</creationDate>
    <author>Zootemplate</author>
    <authorEmail>support@zootemplate.com</authorEmail>
    <authorUrl>http://www.zootemplate.com/</authorUrl>
    <copyright>Copyright (c) 2008 - 2016 ZooTemplate.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2 or later</license>
    <version>1.2.0</version>
    <description>Description of Compare List Module</description>

    <files>
        <filename module="mod_zt_comparelist">mod_zt_comparelist.php</filename>
        <filename>mod_zt_comparelist.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="moduleclass_sfx"
                       type="text"
                       default=""
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field name="layout"
                       type="filelist"
                       label="CompareList Layout"
                       description="CompareList Layout"
                       directory="/modules/mod_zt_comparelist/tmpl"
                       default="default" hide_default="1" hide_none="1"
                       stripext="1" filter="\.php$" exclude="^_"/>
            </fieldset>

        </fields>
    </config>
</extension>
