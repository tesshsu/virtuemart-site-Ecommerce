<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">

<!-- Author Block -->
	<name>Ulathemes Article Carousel</name>
	<author>ulathemes.com</author>
	<creationDate>July 18, 2016</creationDate>
	<copyright>Copyright (C) 2016 ulathemes.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenseses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>admin@ulathemes.com</authorEmail>
	<authorUrl>http://ulathemes.com</authorUrl>
	<version>1.0.0</version>
	
<!-- Description Block -->
	<description>
		<![CDATA[<div style="border: 1px solid red; border-radius: 7px; padding: 10px;">
			<strong>Ulathemes Article Carousel</strong> .This module will help you to show more articles of <strong>Content Component</strong> in beautiful <strong>responsive carousel slider</strong>. It has options for setting the pagination/sliding speed, enabling/disabling autoplay, showing bullet navigation and more. Module is very flexible, easy to install and configure!<br>			
		</div>]]>
	</description>
	
<!-- Files upload Block -->	
	<files>
		<filename module="mod_ulathemes_carousel_content">mod_ulathemes_carousel_content.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>assets</folder>
		<folder>languages</folder>
		<folder>tmpl</folder>
		<folder>libs</folder>
	</files>
	
<!-- Languages Block -->
	<languages>
		<language tag="en-GB">languages/en-GB.mod_ulathemes_carousel_content.ini</language>
	</languages>

<!-- Config Block -->
	<config>
		<fields name="params">
			<!-- Basic Block -->
			<fieldset name="basic">						
				<field
					name="bgImage"
					type="media" 
					label="ULATHEMES_CAROUSEL_CONTENT_BACKGROUND_IMAGE" 
					description="ULATHEMES_CAROUSEL_CONTENT_BACKGROUND_IMAGE_DESC" 
					size="30"
					default="" />
				<field 
                    name="isBgColor" 
                    type="radio" 
                    default="0" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_IS_BG_COLOR" 
                    description="ULATHEMES_CAROUSEL_CONTENT_IS_BG_COLOR_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field
					name="bgColor"
					type="color" 
					label="ULATHEMES_CAROUSEL_CONTENT_BG_COLOR" 
					description="ULATHEMES_CAROUSEL_CONTENT_BG_COLOR_DESC" 
					size="30"
					default="#dddddd" />
			</fieldset>
			
			<!-- Carousel Block -->
			<fieldset name="carousel">				
				<field
					name="cols"
					type="text"
					default="4"
					label="ULATHEMES_CAROUSEL_CONTENT_COLS"
					description="ULATHEMES_CAROUSEL_CONTENT_COLS_DESC" />
				<field
					name="colsOnDesktop"
					type="text"
					default="4"
					label="ULATHEMES_CAROUSEL_CONTENT_COL_ON_DESKTOP"
					description="ULATHEMES_CAROUSEL_CONTENT_COL_ON_DESKTOP_DESC" />
				<field
					name="colsOnDesktopSmall"
					type="text"
					default="3"
					label="ULATHEMES_CAROUSEL_CONTENT_COL_ON_DESKTOP_SMALL"
					description="ULATHEMES_CAROUSEL_CONTENT_COL_ON_DESKTOP_SMALL_DESC" />
				<field
					name="colsOnTablet"
					type="text"
					default="2"
					label="ULATHEMES_CAROUSEL_CONTENT_COL_ON_TABLET"
					description="ULATHEMES_CAROUSEL_CONTENT_COL_ON_TABLET_DESC" />
				<field
					name="colsOnMobile"
					type="text"
					default="1"
					label="ULATHEMES_CAROUSEL_CONTENT_COL_ON_MOBILE"
					description="ULATHEMES_CAROUSEL_CONTENT_COL_ON_MOBILE_DESC" />
				<field
					name="itemsSpace"
					type="text"
					default="30"
					label="ULATHEMES_CAROUSEL_CONTENT_ITEMS_SPACE"
					description="ULATHEMES_CAROUSEL_CONTENT_ITEMS_SPACE_DESC" />			
				<field 
                    name="autoPlay" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_AUTO_PLAY" 
                    description="ULATHEMES_CAROUSEL_CONTENT_AUTO_PLAY_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field
					name="autoPlayTimeout"
					type="text"
					default="5000"
					label="ULATHEMES_CAROUSEL_CONTENT_AUTO_PLAY_TIMEOUT"
					description="ULATHEMES_CAROUSEL_CONTENT_AUTO_PLAY_TIMEOUT_DESC" />	
				<field 
                    name="pauseOnHover" 
                    type="radio" 
                    default="0" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_PAUSE_HOVER" 
                    description="ULATHEMES_CAROUSEL_CONTENT_PAUSE_HOVER_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field 
                    name="loop" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_LOOP" 
                    description="ULATHEMES_CAROUSEL_CONTENT_LOOP_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field 
                    name="mouseDrag" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_MOUSE_DRAG" 
                    description="ULATHEMES_CAROUSEL_CONTENT_MOUSE_DRAG_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>				
				<field 
                    name="touchDrag" 
                    type="radio" 
                    default="0" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_TOUCH_DRAG" 
                    description="ULATHEMES_CAROUSEL_CONTENT_TOUCH_DRAG_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field
					name="scrollItems"
					type="text"
					default="1"
					label="ULATHEMES_CAROUSEL_CONTENT_SCROLL_ITEMS"
					description="ULATHEMES_CAROUSEL_CONTENT_SCROLL_ITEMS_DESC" />				
				<field 
                    name="pagination" 
                    type="radio" 
                    default="0" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_PAGINATION" 
                    description="ULATHEMES_CAROUSEL_CONTENT_PAGINATION_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field 
                    name="navigation" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="ULATHEMES_CAROUSEL_CONTENT_NAVIGATION" 
                    description="ULATHEMES_CAROUSEL_CONTENT_NAVIGATION_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field
					name="nextNav"
					type="text"
					default="Next"
					label="ULATHEMES_CAROUSEL_CONTENT_NEXT_NAV"
					description="ULATHEMES_CAROUSEL_CONTENT_NEXT_NAV_DESC" />
				<field
					name="prevNav"
					type="text"
					default="Prev"
					label="ULATHEMES_CAROUSEL_CONTENT_PREV_NAV"
					description="ULATHEMES_CAROUSEL_CONTENT_PREV_NAV_DESC" />
				
			</fieldset>
			
			<!-- Source Block -->
			<fieldset name="source">
				<field
					name="show_front"
					type="list"
					default="show"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_FEATURED"
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_FEATURED_DESC">
						<option value="show">JSHOW</option>
						<option value="hide">JHIDE</option>
						<option value="only">Only show Featured Articles</option>
				</field>
				<field 
					name="count" 
					type="text" 
					default="6"
					label="ULATHEMES_CAROUSEL_CONTENT_COUNT"
					description="ULATHEMES_CAROUSEL_CONTENT_COUNT_DESC" />
				<field
					name="category_filtering_type" 
					type="list"
					default="1"
					label="ULATHEMES_CAROUSEL_CONTENT_FILTER_TYPE"
					description="ULATHEMES_CAROUSEL_CONTENT_FILTER_TYPE">
						<option value="1">Include</option>
						<option value="0">Exclude</option>
				</field>
				<field 
					name="catid" 
					type="category" 
					extension="com_content"
					multiple="true"
					size="5"
					label="JCATEGORY"
					description="ULATHEMES_CAROUSEL_CONTENT_CATEGORY_DESC">
						<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				<field
					name="show_child_category_articles" 
					type="list"
					default="0"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_CHILD"
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_CHILD_DESC">
						<option value="1">Include</option>
						<option value="0">Exclude</option>
				</field>
				<field
					name="levels"
					type="text"
					default="1"
					label="ULATHEMES_CAROUSEL_CONTENT_CATDEPTH"
					description="ULATHEMES_CAROUSEL_CONTENT_CATDEPTH_DESC" />
				<field name="filteringspacer1" type="spacer" hr="true" />
				<field 
					name="author_filtering_type" 
					type="list"
					default="1"
					label="ULATHEMES_CAROUSEL_CONTENT_AUTHOR_FILTER"
					description="ULATHEMES_CAROUSEL_CONTENT_AUTHOR_FILTER_DESC">
						<option value="1">Include</option>
						<option value="0">Exclude</option>
				</field>
				<field 
					name="created_by" 
					type="sql"
					multiple="true" 
					size="5"
					label="ULATHEMES_CAROUSEL_CONTENT_AUTHOR"
					description="ULATHEMES_CAROUSEL_CONTENT_AUTHOR_DESC"
					query="select id, name, username from #__users where id IN (select distinct(created_by) from #__content) order by name ASC"
					key_field="id" value_field="name">
					<option value="">JOPTION_SELECT_AUTHORS</option>
				</field>
				<field 
					name="author_alias_filtering_type" 
					type="list"
					default="1"
					label="ULATHEMES_CAROUSEL_CONTENT_AUTHORALIASFILTERING"
					description="ULATHEMES_CAROUSEL_CONTENT_AUTHORALIASFILTERING_DESC">
						<option value="1">Include</option>
						<option value="0">Exclude</option>
				</field>
				<field 
					name="created_by_alias" 
					type="sql"
					multiple="true" 
					size="5"
					label="ULATHEMES_CAROUSEL_CONTENT_AUTHORALIAS"
					description="ULATHEMES_CAROUSEL_CONTENT_AUTHORALIAS_DESC"
					query="select distinct(created_by_alias) from #__content where created_by_alias != '' order by created_by_alias ASC"
					key_field="created_by_alias" value_field="created_by_alias">
						<option value="">JOPTION_SELECT_AUTHOR_ALIASES</option>
				</field>
				<field name="filteringspacer2" type="spacer" hr="true" />
				<field 
					name="excluded_articles" 
					type="textarea"
					cols="10" 
					rows="3"
					label="ULATHEMES_CAROUSEL_CONTENT_EXCLUDEDARTICLES"
					description="ULATHEMES_CAROUSEL_CONTENT_EXCLUDEDARTICLES_DESC" />
				<field name="filteringspacer3" type="spacer" hr="true" />
				<field 
					name="date_filtering" 
					type="list" 
					default="off"
					label="ULATHEMES_CAROUSEL_CONTENT_DATEFILTERING"
					description="ULATHEMES_CAROUSEL_CONTENT_DATEFILTERING_DESC">
						<option value="off">Off</option>
						<option value="range">Date Range</option>
						<option value="relative">Relative Date</option>
				</field>
				<field 
					name="date_field" 
					type="list" 
					default="a.created"
					label="ULATHEMES_CAROUSEL_CONTENT_DATERANGEFIELD"
					description="ULATHEMES_CAROUSEL_CONTENT_DATERANGEFIELD_DESC">
						<option value="a.created">Created Date</option>
						<option value="a.modified">Modified Date</option>
						<option value="a.publish_up">Start Publishing Date</option>
				</field>
				<field 
					name="start_date_range" 
					type="calendar"
					format="%Y-%m-%d %H:%M:%S"
					label="ULATHEMES_CAROUSEL_CONTENT_STARTDATE"
					description="ULATHEMES_CAROUSEL_CONTENT_STARTDATE_DESC"
					size="22"
					filter="user_utc" />
				<field 
					name="end_date_range" 
					type="calendar"
					format="%Y-%m-%d %H:%M:%S"
					label="ULATHEMES_CAROUSEL_CONTENT_ENDDATE"
					description="ULATHEMES_CAROUSEL_CONTENT_ENDDATE_DESC"
					size="22"
					filter="user_utc" />
				<field 
					name="relative_date" 
					type="text" 
					default="30"
					label="ULATHEMES_CAROUSEL_CONTENT_RELATIVEDATE"
					description="ULATHEMES_CAROUSEL_CONTENT_RELATIVEDATE_DESC" />
				<field name="filteringspacer4" type="spacer" hr="true" />
				<field 
					name="article_ordering" 
					type="list"
					default="a.title"
					label="ULATHEMES_CAROUSEL_CONTENT_ARTICLEORDERING"
					description="ULATHEMES_CAROUSEL_CONTENT_ARTICLEORDERING_DESC">
						<option value="a.ordering">Article Manager Order</option>
						<option value="fp.ordering">Featured Articles Order</option>
						<option value="a.hits">Hits</option>
						<option value="a.title">Title</option>
						<option value="a.id">ID</option>
						<option value="a.alias">Alias</option>
						<option value="a.created">Created Date</option>
						<option value="modified">Modified Date</option>
						<option value="publish_up">Start Publishing Date</option>
						<option value="a.publish_down">Finish Publishing Date</option>
				</field>
				<field 
					name="article_ordering_direction" 
					type="list"
					default="ASC"
					label="ULATHEMES_CAROUSEL_CONTENT_ARTICLEORDERINGDIR"
					description="ULATHEMES_CAROUSEL_CONTENT_ARTICLEORDERINGDIR_DESC">
						<option value="DESC">Descending</option>
						<option value="ASC">Ascending</option>
				</field>
			</fieldset>
			
			<!-- Display Block -->
			<fieldset name="display">
				<field 
					name="showImage" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_IMAGE" 
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_IMAGE_DESC">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
                </field>
				<field 
					name="resizeImage" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_RESIZE_IMAGE" 
					description="ULATHEMES_CAROUSEL_CONTENT_RESIZE_IMAGE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="imagegWidth" 
					type="text" 
					default="375"
					label="ULATHEMES_CAROUSEL_CONTENT_IMAGE_WIDTH"
					description="ULATHEMES_CAROUSEL_CONTENT_IMAGE_WIDTH_DESC" />
				<field 
					name="imagegHeight" 
					type="text" 
					default="200"
					label="ULATHEMES_CAROUSEL_CONTENT_IMAGE_HEIGHT"
					description="ULATHEMES_CAROUSEL_CONTENT_IMAGE_HEIGHT_DESC" />
				<field 
					name="showTitle" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_TITLE" 
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_TITLE_DESC">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
                </field>
				<field 
					name="show_date" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_CREATED_DATE" 
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_CREATED_DATE_DESC">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
                </field>
				<field 
					name="show_category" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_CATEGORY" 
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_CATEGORY_DESC">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
                </field>
				<field 
					name="show_hits" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_HITS" 
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_HITS_DESC">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
                </field>
				<field 
					name="show_introtext" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="ULATHEMES_CAROUSEL_CONTENT_SHOW_INTROTEXT" 
					description="ULATHEMES_CAROUSEL_CONTENT_SHOW_INTROTEXT_DESC">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
                </field>
				<field 
					name="introtext_limit" 
					type="text" 
					default="250"
					label="ULATHEMES_CAROUSEL_CONTENT_INTROTEXTLIMIT"
					description="ULATHEMES_CAROUSEL_CONTENT_INTROTEXTLIMIT_DESC" />
				<field
					name="show_readmore"
					label="JGLOBAL_SHOW_READMORE_LABEL"
					description="JGLOBAL_SHOW_READMORE_DESC"
					type="radio"
					default="1"
					class="btn-group btn-group-yesno">
						<option value="0">JHIDE</option>
						<option value="1">JSHOW</option>
				</field>
			</fieldset>
			
			<!-- Advanced Block -->
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
						<option value="1">JGLOBAL_USE_GLOBAL</option>
						<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>