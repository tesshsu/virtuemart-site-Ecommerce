<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="contact" addrulepath="components/com_contact/models/rules" label="COM_CONTACT_CONTACT_DEFAULT_LABEL">
		<field
			name="spacer"
			type="spacer"
			label="COM_CONTACT_CONTACT_REQUIRED"
			class="text"
		/>
		<field
			name="contact_name"
			type="text"
			label="COM_CONTACT_CONTACT_EMAIL_NAME_LABEL"
			description="COM_CONTACT_CONTACT_EMAIL_NAME_DESC"
			id="contact-name"
			size="30"
			filter="string"
			required="true"
		/>
		<field
			name="contact_email"
			type="email"
			label="COM_CONTACT_EMAIL_LABEL"
			description="COM_CONTACT_EMAIL_DESC"
			id="contact-email"
			size="30"
			filter="string"
			validate="contactemail"
			autocomplete="email"
			required="true"
		/>
		<field
			name="contact_message"
			type="textarea"
			label="COM_CONTACT_CONTACT_ENTER_MESSAGE_LABEL"
			description="COM_CONTACT_CONTACT_ENTER_MESSAGE_DESC"
			cols="50"
			rows="10"
			id="contact-message"
			filter="safehtml"
			validate="contactemailmessage"
			required="true"
		/>
		<field name="list_suject" type="list" default="" required="true" label="Select an option" description="">
		  <option value="">COM_CONTACT_CONTACT_SELECT</option>
		  <option value="Service Client">COM_CONTACT_CONTACT_SUJET_ONE</option>
		  <option value="Service d'exportation">COM_CONTACT_CONTACT_SUJET_TWO</option>
		  <option value="Autre">COM_CONTACT_CONTACT_SUJET_THERE</option>
		</field>
		<field
			name="contact_website"
			type="text"
			label="contact_website"
			description="contact_website"
			id="contact_website"
			validate="contactwebsite"
			size="1"
			filter="string"
		/>
	</fieldset>
	<fieldset name="captcha">
		<field
			name="captcha"
			type="captcha"
			label="COM_CONTACT_CAPTCHA_LABEL"
			description="COM_CONTACT_CAPTCHA_DESC"
			validate="captcha"
			namespace="contact"
		/>
	</fieldset>
</form>
