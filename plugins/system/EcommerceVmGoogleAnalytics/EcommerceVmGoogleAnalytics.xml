<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
    <name>System - Google Analytics Ecommerce Tracking for VirtueMart</name>
  <author>Joomla-Service</author>
  <creationDate>April 2017</creationDate>
  <copyright>Copyright 2016 Joomla-Service</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>info@joomla-service.in.ua</authorEmail>
  <authorUrl>http://joomla-service.in.ua</authorUrl>
  <version>3.0.2</version>
    <description>
       This is Plugin Enhanced Ecommerce Google Analytics for VirtueMart. The version 3.0.2  of the plugin is - Stable.  Enable the Plugin and Write Your Google Analytics ID and the name of Your shop.
    </description>

  <files>
    <filename plugin="EcommerceVmGoogleAnalytics">EcommerceVmGoogleAnalytics.php</filename>
    <filename>index.html</filename>
    

  </files>

 <config>
        <fields name="params">
            <fieldset name="Basic">
              
                <field name="code"
                       type="text"
                       default="UA-XXXXX-X"
                       label="Google Analytics ID"
                       description=" This code can be found in your Google Analytics account">
              
                </field>

                <field name="affiliation"
                       type="text"
                       default="The name of your store"
                       label="Affiliation"
                       description=" The name of your store">
                </field>

            </fieldset>

        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="Google Analytics Ecommerce Tracking for VirtueMart"><![CDATA[http://joomla-service.in.ua/updatexml/EcommerceVmGoogleAnalyticsEnhanced.xml]]></server>
    </updateservers>
</extension>