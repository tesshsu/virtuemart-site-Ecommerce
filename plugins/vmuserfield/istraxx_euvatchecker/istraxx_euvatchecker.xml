               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_COMPANY_CONSISTENCY_DESC">
            <option value="0">COM_VIRTUEMART_NO</option>
            <option value="1">COM_VIRTUEMART_YES</option>
        </param-->
    </params>

