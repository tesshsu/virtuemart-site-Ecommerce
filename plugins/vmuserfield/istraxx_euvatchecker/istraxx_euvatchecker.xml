    <files>
        <filename plugin="istraxx_euvatchecker">istraxx_euvatchecker.php</filename>
        <folder>istraxx_euvatchecker</folder>
        <folder>language</folder>
    </files>
    <config addfieldpath="/plugins/vmuserfield/istraxx_euvatchecker/istraxx_euvatchecker/fields">
        <fields name="params"  >
            <fieldset name="template" addfieldpath="/plugins/vmuserfield/istraxx_euvatchecker/istraxx_euvatchecker/fields">
                <field type="vmjpluginwarning" addfieldpath="/plugins/vmuserfield/istraxx_euvatchecker/istraxx_euvatchecker/fields" />
                <field addfieldpath="/plugins/vmuserfield/istraxx_euvatchecker/istraxx_euvatchecker/fields" name="shoppergroup_vat" type="shoppergroup" default="" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_VATGROUP"
                       description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_VATGROUP_DESC"/>
                <field name="shoppergroup_nonvat" type="shoppergroup" default="" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_NONVATGROUP"
                       description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_NONVATGROUP_DESC"/>

                <field name="country_consistency" type="list" default="0" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_COUNTRY_CONSISTENCY"
                       description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_COUNTRY_CONSISTENCY_DESC">
                    <option value="0">COM_VIRTUEMART_NO</option>
                    <option value="1">COM_VIRTUEMART_YES</option>
                </field>
                <field name="requiredForEurope" type="list" default="1" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_REQUIRED_EUROPE"
                       description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_REQUIRED_EUROPE_DESC">
                    <option value="0">COM_VIRTUEMART_NO</option>
                    <option value="1">COM_VIRTUEMART_YES</option>
                </field>
                <field name="preferBT" type="list" default="0" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_PREFER_BT"
                       description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_PREFER_BT_DESC">
                    <option value="0">COM_VIRTUEMART_NO</option>
                    <option value="1">COM_VIRTUEMART_YES</option>
                </field>
                <field name="keepTINValidDays" type="text" size="4" default="" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_KEEP_TIN_FOR_DAYS" description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_KEEP_TIN_FOR_DAYS_TIP" />
            </fieldset>
        </fields>
    </config>
    <params addpath="/plugins/vmuserfield/istraxx_euvatchecker/istraxx_euvatchecker/elements"/>
    <params addpath="/administrator/components/com_virtuemart/elements"/>
    <params>
        <param type="vmjpluginwarning"/>
        <param name="" type="developerinfo" default="" label="" description=""/>
        <param name="shoppergroup_vat" type="shoppergroup" default="" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_VATGROUP"
               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_VATGROUP_DESC"/>
        <param name="shoppergroup_nonvat" type="shoppergroup" default="" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_NONVATGROUP"
               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_NONVATGROUP_DESC"/>

        <param name="country_consistency" type="list" default="0" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_COUNTRY_CONSISTENCY"
               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_COUNTRY_CONSISTENCY_DESC">
            <option value="0">COM_VIRTUEMART_NO</option>
            <option value="1">COM_VIRTUEMART_YES</option>
        </param>
        <param name="requiredForEurope" type="list" default="1" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_REQUIRED_EUROPE"
               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_REQUIRED_EUROPE_DESC">
            <option value="0">COM_VIRTUEMART_NO</option>
            <option value="1">COM_VIRTUEMART_YES</option>
        </param>
        <param name="preferBT" type="list" default="0" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_PREFER_BT"
               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_PREFER_BT_DESC">
            <option value="0">COM_VIRTUEMART_NO</option>
            <option value="1">COM_VIRTUEMART_YES</option>
        </param>
        <param name="keepTINValidDays" type="text" default="" label="VMUSERFIELD_ISTRAXX_EUVATCHECKER_KEEP_TIN_FOR_DAYS"
               description="VMUSERFIELD_ISTRAXX_EUVATCHECKER_KEEP_TIN_FOR_DAYS_DESC" />

