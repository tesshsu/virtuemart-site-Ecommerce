    <files>
        <filename plugin="alatak_cybermut">alatak_cybermut.php</filename>
        <folder>alatak_cybermut</folder>
    </files>

    <languages folder="language">
        <language tag="fr-FR">fr-FR/fr-FR.plg_vmpayment_alatak_cybermut.ini</language>
    </languages>


    <params addpath="/plugins/vmpayment/alatak_cybermut/alatak_cybermut/elements"/>
    <params addpath="/administrator/components/com_virtuemart/elements">
        <param type="vmjpluginwarning"/>
        <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_TITLE" level="level1"/>
        <param type="spacer" default="" level="level1"/>

        <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_SETTINGS" level="level1"/>
        <param name="payment_logos" type="vmfiles" label="VMPAYMENT_ALATAK_CYBERMUT_LOGOS"
               description="VMPAYMENT_ALATAK_CYBERMUT_LOGOS_DESC"
               directory="/images/stories/virtuemart/payment"
               default="" hide_default="1" hide_none="1"
               stripext="0" exclude="^_"/>

        <param type="spacer" default="" level="level1"/>
        <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_ACCESS" level="level1"/>

        <param name="tpe" type="text" size="10" default="1234567" label="VMPAYMENT_ALATAK_CYBERMUT_TPE"
               description="VMPAYMENT_ALATAK_CYBERMUT_TPE_DESC"/>
        <param name="societe" type="text" size="15" default="monsite" label="VMPAYMENT_ALATAK_CYBERMUT_SOCIETE"
               description="VMPAYMENT_ALATAK_CYBERMUT_RANG_DESC"/>
        <param name="cle" type="text" size="60" default="0123456789ABCDEF0123456789ABCDEF01234567"
               label="VMPAYMENT_ALATAK_CYBERMUT_CLE" description="VMPAYMENT_ALATAK_CYBERMUT_CLE_DESC"/>
        <param name="banque" type="list" size="50" default="" label="VMPAYMENT_ALATAK_CYBERMUT_BANQUE"
               description="VMPAYMENT_ALATAK_CYBERMUT_BANQUE_DESC">
            <option value="CM">VMPAYMENT_ALATAK_CYBERMUT_BANQUE_CREDIT_MUTUEL</option>
            <option value="CIC">VMPAYMENT_ALATAK_CYBERMUT_BANQUE_GROUPE_CIC</option>
            <option value="OBC">VMPAYMENT_ALATAK_CYBERMUT_BANQUE_OBC</option>
        </param>

        <param name="test_production" type="list" default="GET" label="VMPAYMENT_ALATAK_CYBERMUT_TEST_PRODUCTION"
               description="VMPAYMENT_ALATAK_CYBERMUT_TEST_PRODUCTION_DESC">
            <option value="test">VMPAYMENT_ALATAK_CYBERMUT_TEST</option>
            <option value="production">VMPAYMENT_ALATAK_CYBERMUT_PRODUCTION</option>
        </param>
        <param name="recurring" type="list" default="fr" label="VMPAYMENT_ALATAK_CYBERMUT_RECURRING"
               description="VMPAYMENT_ALATAK_CYBERMUT_RECURRING_DESC">
            <option value="1">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_1</option>
            <option value="2">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_2</option>
            <option value="3">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_3</option>
            <option value="4">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_4</option>
        </param>
        <param type="spacer" default="" level="level1"/>
        <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_RESTRICTIONS" level="level1"/>
        <param name="min_amount" type="text" size="10" default="" label="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MIN"
               description="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MIN_DESC"/>
        <param name="max_amount" type="text" size="10" default="" label="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MAX"
               description="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MAX_DESC"/>
        <param name="countries" type="vmcountries" scope="com_virtuemart" default=""
               label="VMPAYMENT_ALATAK_CYBERMUT_COUNTRIES" description="VMPAYMENT_ALATAK_CYBERMUT_COUNTRIES_DESC"/>
        <!--param type="spacer" default="" level="level1" />
            <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_COST" level="level1" / -->
        <param name="payment_currency" type="vmacceptedcurrency" default="" label="VMPAYMENT_ALATAK_CYBERMUT_CURRENCY"
               description="VMPAYMENT_ALATAK_CYBERMUT_CURRENCY_DESC"/>

        <param name="cost_per_transaction" type="text" label="VMPAYMENT_ALATAK_CYBERMUT_COST_PER_TRANSACTION"
               description="VMPAYMENT_ALATAK_CYBERMUT_COST_PER_TRANSACTION_EXPLAIN"/>
        <param name="cost_percent_total" type="text" label="VMPAYMENT_ALATAK_CYBERMUT_COST_PERCENT_TOTAL"
               description="VMPAYMENT_ALATAK_CYBERMUT_COST_PERCENT_TOTAL_EXPLAIN"/>
        <param name="tax_id" type="vmtaxes" scope="com_virtuemart" label="VMPAYMENT_ALATAK_CYBERMUT_TAX"
               description="VMPAYMENT_ALATAK_CYBERMUT_TAX_EXPLAIN"/>

        <param type="spacer" default="" level="level1"/>
        <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_RETURN_OPTIONS" level="level1"/>

        <param name="order_success_status" type="vmorderstate" scope="com_virtuemart" default="C"
               label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_STATUS"
               description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_STATUS_DESC"/>
        <param name="order_failure_status" type="vmorderstate" scope="com_virtuemart" default="X"
               label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_STATUS"
               description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_STATUS_DESC"/>
        <param name="order_success_echeance" type="vmorderstate" scope="com_virtuemart" default="C"
               label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_ECHEANCE"
               description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_ECHEANCE"/>
        <param name="order_failure_echeance" type="vmorderstate" scope="com_virtuemart" default="X"
               label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_ECHEANCE"
               description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_ECHEANCE_DESC"/>

        <param type="spacer" default="" level="level1"/>
        <param type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_PAGE" level="level1"/>

        <param type="spacer" default="" level="level1"/>
        <param name="debug" type="radio" default="0" label="VMPAYMENT_ALATAK_CYBERMUT_DEBUG"
               description="VMPAYMENT_ALATAK_CYBERMUT_DEBUG_DESC">
            <option value="0">VMPAYMENT_ALATAK_CYBERMUT_NO</option>
            <option value="1">VMPAYMENT_ALATAK_CYBERMUT_YES</option>
        </param>

    </params>

    <vmconfig>
        <fields>
            <fieldset name="basic" addfieldpath="/administrator/components/com_virtuemart/fields">
                <field type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_TITLE" level="level1"/>

                <field type="vmtitle" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_SETTINGS" level="level1"/>
                <field name="payment_logos" type="vmfiles" multiple="true" label="VMPAYMENT_ALATAK_CYBERMUT_LOGOS"
                       description="VMPAYMENT_ALATAK_CYBERMUT_LOGOS_DESC"
                       directory="/images/stories/virtuemart/payment"
                       default="" hide_default="1" hide_none="1"
                       stripext="0" exclude="^_"/>
                <field type="spacer" default="" level="level1"/>
                <field type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_ACCESS" level="level1"/>

                <field name="tpe" type="text" size="10" default="1234567" label="VMPAYMENT_ALATAK_CYBERMUT_TPE"
                       description="VMPAYMENT_ALATAK_CYBERMUT_TPE_DESC"/>
                <field name="societe" type="text" size="15" default="monsite" label="VMPAYMENT_ALATAK_CYBERMUT_SOCIETE"
                       description="VMPAYMENT_ALATAK_CYBERMUT_RANG_DESC"/>
                <field name="cle" type="text" size="60" default="0123456789ABCDEF0123456789ABCDEF01234567"
                       label="VMPAYMENT_ALATAK_CYBERMUT_CLE" description="VMPAYMENT_ALATAK_CYBERMUT_CLE_DESC"/>
                <field name="banque" type="list" size="50" default="" label="VMPAYMENT_ALATAK_CYBERMUT_BANQUE"
                       description="VMPAYMENT_ALATAK_CYBERMUT_BANQUE_DESC">
                    <option value="CM">VMPAYMENT_ALATAK_CYBERMUT_BANQUE_CREDIT_MUTUEL</option>
                    <option value="CIC">VMPAYMENT_ALATAK_CYBERMUT_BANQUE_GROUPE_CIC</option>
                    <option value="OBC">VMPAYMENT_ALATAK_CYBERMUT_BANQUE_OBC</option>
                </field>

                <field name="test_production" type="list" default="GET"
                       label="VMPAYMENT_ALATAK_CYBERMUT_TEST_PRODUCTION"
                       description="VMPAYMENT_ALATAK_CYBERMUT_TEST_PRODUCTION_DESC">
                    <option value="test">VMPAYMENT_ALATAK_CYBERMUT_TEST</option>
                    <option value="production">VMPAYMENT_ALATAK_CYBERMUT_PRODUCTION</option>
                </field>
                <field name="recurring" type="list" default="fr" label="VMPAYMENT_ALATAK_CYBERMUT_RECURRING"
                       description="VMPAYMENT_ALATAK_CYBERMUT_RECURRING_DESC">
                    <option value="1">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_1</option>
                    <option value="2">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_2</option>
                    <option value="3">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_3</option>
                    <option value="4">VMPAYMENT_ALATAK_CYBERMUT_RECURRING_4</option>
                </field>
                <field type="vmtitle" default="VMPAYMENT_ALATAK_CYBERMUT_RESTRICTIONS" level="level1"/>
                <field name="min_amount" type="text" size="10" default="" label="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MIN"
                       description="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MIN_DESC"/>
                <field name="max_amount" type="text" size="10" default="" label="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MAX"
                       description="VMPAYMENT_ALATAK_CYBERMUT_AMOUNT_MAX_DESC"/>
                <field name="countries" type="vmcountries" scope="com_virtuemart" default=""
                       label="VMPAYMENT_ALATAK_CYBERMUT_COUNTRIES"
                       description="VMPAYMENT_ALATAK_CYBERMUT_COUNTRIES_DESC"/>
                <!--field type="spacer" default="" level="level1" />
                    <field type="spacer" default="VMPAYMENT_ALATAK_CYBERMUT_COST" level="level1" / -->
                <field name="payment_currency" type="vmacceptedcurrency" default=""
                       label="VMPAYMENT_ALATAK_CYBERMUT_CURRENCY"
                       description="VMPAYMENT_ALATAK_CYBERMUT_CURRENCY_DESC"/>

                <field name="cost_per_transaction" type="text" label="VMPAYMENT_ALATAK_CYBERMUT_COST_PER_TRANSACTION"
                       description="VMPAYMENT_ALATAK_CYBERMUT_COST_PER_TRANSACTION_EXPLAIN"/>
                <field name="cost_percent_total" type="text" label="VMPAYMENT_ALATAK_CYBERMUT_COST_PERCENT_TOTAL"
                       description="VMPAYMENT_ALATAK_CYBERMUT_COST_PERCENT_TOTAL_EXPLAIN"/>
                <field name="tax_id" type="vmtaxes" scope="com_virtuemart" label="VMPAYMENT_ALATAK_CYBERMUT_TAX"
                       description="VMPAYMENT_ALATAK_CYBERMUT_TAX_EXPLAIN"/>

                <field type="vmtitle" default="VMPAYMENT_ALATAK_CYBERMUT_RETURN_OPTIONS" level="level1"/>

                <field name="order_success_status" type="vmorderstate" scope="com_virtuemart" default="C"
                       label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_STATUS"
                       description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_STATUS_DESC"/>
                <field name="order_failure_status" type="vmorderstate" scope="com_virtuemart" default="X"
                       label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_STATUS"
                       description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_STATUS_DESC"/>
                <field name="order_success_echeance" type="vmorderstate" scope="com_virtuemart" default="C"
                       label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_ECHEANCE"
                       description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_SUCCESS_ECHEANCE"/>
                <field name="order_failure_echeance" type="vmorderstate" scope="com_virtuemart" default="X"
                       label="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_ECHEANCE"
                       description="VMPAYMENT_ALATAK_CYBERMUT_ORDER_FAILURE_ECHEANCE_DESC"/>

                <field type="vmtitle" default="VMPAYMENT_ALATAK_CYBERMUT_PAYMENT_PAGE" level="level1"/>

                <field name="debug" type="radio" default="0" label="VMPAYMENT_ALATAK_CYBERMUT_DEBUG"
                       description="VMPAYMENT_ALATAK_CYBERMUT_DEBUG_DESC">
                <option value="0">VMPAYMENT_ALATAK_CYBERMUT_NO</option>
                <option value="1">VMPAYMENT_ALATAK_CYBERMUT_YES</option>
                </field>
            </fieldset>
        </fields>
    </vmconfig>

    <updateservers>
        <server type="extension" name="VirtueMart plg_vmpayment_cybermut Update Site"><![CDATA[http://extensions.virtuemart.net/releases/plg_vmpayment_cybermut_update.xml]]></server>
    </updateservers>

</extension>
