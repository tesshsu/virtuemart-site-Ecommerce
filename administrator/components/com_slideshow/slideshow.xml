<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
<name>COM_SLIDESHOW</name>
<author>Huge-IT</author>
<creationDate>January 2015</creationDate>
<copyright>Copyright (C) 2013 Huge-IT.com 2013. All rights reserved.</copyright> 
<authorEmail>info@huge-it.com</authorEmail> 
<authorUrl>http://www.huge-it.com</authorUrl>
<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
<version>1.0.7</version>
<description>COM_SLIDESHOW_XML_DESCRIPTION</description>
<install>
    <sql>
	<file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
    </sql>
</install>

<uninstall>
    <sql>
	 <file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
    </sql>
</uninstall>

<update>
        <schemas>
                <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
</update>

	<files folder="site">
            <filename>index.html</filename>
            <filename>controller.php</filename>
            <filename>slideshow.php</filename>
            <folder>models</folder>
            <folder>helpers</folder>
            <folder>views</folder>
	</files>

	<media destination="com_slideshow" folder="media">
        <filename>index.html</filename>
            <folder>elements</folder>
            <folder>images</folder>
            <folder>js</folder>
            <folder>style</folder>
	</media>
	<administration>
	    <menu img="../media/com_slideshow/images/huge.png">COM_SLIDESHOW</menu>
        <submenu>
            <menu img="../media/com_slideshow/images/huge.png" link="option=com_slideshow&amp;view=slideshows">COM_SLIDESHOW</menu>
            <menu img="../media/com_slideshow/images/huge.png" link="option=com_slideshow&amp;view=general">COM_GENERAL</menu>
            <menu img="../media/com_slideshow/images/huge.png" link="option=com_slideshow&amp;view=featured">COM_FEATURED</menu>
        </submenu>
		
        <files folder="admin">
            <filename>index.html</filename>
            <filename>controller.php</filename>
            <filename>slideshow.php</filename>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
            <languages folder="admin">
                    <language tag="en-GB">language/en-GB/en-GB.com_slideshow.ini</language>
                    <language tag="en-GB">language/en-GB/en-GB.com_slideshow.sys.ini</language>
            </languages>
	</administration>
</extension>
